name: Deploy with pnpm

on:
  push:
    branches: [ main ]
  workflow_dispatch:

env:
  VITEPRESS_OUT_DIR: docs/.vitepress/dist
  PNPM_VERSION: 8.15.0 # 指定 pnpm 版本

jobs:
  deploy:
    runs-on: ubuntu-latest
    permissions:
      contents: write

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 20
          cache: 'pnpm' # 使用 pnpm 专属缓存策略

      - name: Install pnpm
        uses: pnpm/action-setup@v2
        with:
          version: ${{ env.PNPM_VERSION }}
          run_install: false

      - name: Setup pnpm store
        uses: pnpm/action-setup@v2
        with:
          store_dir: ~/.pnpm-store

      - name: Install dependencies
        run: |
          pnpm config set store-dir ~/.pnpm-store
          pnpm install --frozen-lockfile --prod false

      - name: Build docs
        run: pnpm run docs:build
        env:
          NODE_OPTIONS: '--max_old_space_size=4096'

      - name: Verify build output
        run: |
          echo "Build directory structure:"
          ls -la ${{ env.VITEPRESS_OUT_DIR }}
          [ -f ${{ env.VITEPRESS_OUT_DIR }}/.nojekyll ] || (echo ".nojekyll missing!" && exit 1)

      - name: Deploy to GH Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ${{ env.VITEPRESS_OUT_DIR }}
          keep_files: false
